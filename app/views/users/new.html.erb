<div id="clearance" class="container sign-up text-center top-buffer">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 sign-in">

      <h2><%= t(".title") %></h2>

      <%= form_for @user do |form| %>
        <%= render partial: '/users/form', object: form %>

        <div class="submit-field">
          <%= form.submit %>
        </div>

        <div class="other-links">
          <%= link_to t(".sign_in"), sign_in_path %>
        </div>
      <% end %>

    </div>
  </div>
</div>
