<!DOCTYPE html>
<html>
<head>
  <title>Dinnerclub</title>
  <!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
<![endif]-->
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script src="././assets/typed.js"></script>

  <link rel="icon"
    type="image/png"
    href="https://dl.dropboxusercontent.com/u/4448887/Dinnerclub_files/dinner_club_favicon.png">

</head>

<body>
    <div id="navbar">
    <% if signed_in? %>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Add Page', new_page_path %></li>
      </ul>
    <% end %>

    <ul class="nav navbar-nav pull-right">
      <% if signed_in? %>
        <li><span><%= current_user.email %></span></li>
        <li><%= link_to 'Sign out', sign_out_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Sign in', sign_in_path %></li>
      <% end %>
    </ul>
  </div>

  <div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
